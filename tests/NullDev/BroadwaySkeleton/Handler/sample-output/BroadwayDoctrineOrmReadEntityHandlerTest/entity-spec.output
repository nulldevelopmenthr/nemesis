<?php

declare(strict_types=1);

namespace spec\Something;

use Broadway\ReadModel\Identifiable;
use Broadway\Serializer\Serializable;
use PhpSpec\ObjectBehavior;
use Something\UserEntity;
use Something\UserId;

class UserEntitySpec extends ObjectBehavior
{
    public function let(UserId $id)
    {
        $this->beConstructedWith($id);
    }

    public function it_is_initializable()
    {
        $this->shouldHaveType(UserEntity::class);
        $this->shouldHaveType(Identifiable::class);
        $this->shouldHaveType(Serializable::class);
    }

    public function it_should_expose_constructor_arguments_via_getters(UserId $id)
    {
        $this->getId()->shouldReturn($id);
    }
}
