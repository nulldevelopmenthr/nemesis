<?php

namespace Something;

use Ramsey\Uuid\Uuid;

class UserId
{
    /** @var string */
    private $id;

    public function __construct(string $id)
    {
        $this->id = $id;
    }

    public function getId(): string
    {
        return $this->id;
    }

    public function __toString(): string
    {
        return $this->id;
    }

    public static function create(): self
    {
        $id = Uuid::uuid4()->toString();

        return new self($id);
    }
}
